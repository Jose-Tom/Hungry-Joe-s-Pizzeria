<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Hungry Joe's Pizza || Delivery</title>
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/app.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Poppins:wght@200;300;400;500&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />

    <link
      href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css"
      rel="stylesheet"
    />
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> -->
    <link
      rel="stylesheet"
      type="text/css"
      href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"
    />
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-3.5.1.js"
    ></script>
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"
    ></script>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/chart.min.js"></script>
  </head>
  <body>
    <nav
      class="container mx-auto flex items-center justify-between py-4 navbar w-full md:items-center md:justify-between"
    >
      <div class="logo-container min-w-fit">
        <a class="flex items-center py-4 px-2" href="/"
          ><img src="/img/logo.png" alt="logo"
        /></a>
      </div>

      <% if(user?.role === 'admin') { %>
      <div>
        <ul
          class="md:flex md:items-center z-[1] md:z-auto md:static absolute bg-white w-full left-0 md:w-auto md:py-0 py-4 md:pl-0 pl-7 md:opacity-100 opacity-0 top-[-400px] transition-all ease-in duration-500"
        >
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/admin/orders" class="text-xl">New Orders</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/admin/customers" class="text-xl">Customers</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/admin/menuitems" class="text-xl">Menu Items</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/admin/offers" class="text-xl">Coupon Offers</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/admin/reports" class="text-xl">Reports</a>
          </li>
          <% if(user) { %>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <form id="logout" action="/logout" method="POST">
              <a
                onclick="document.getElementById('logout').submit()"
                href="#"
                class="text-xl"
                >Logout</a
              >
            </form>
          </li>
          <% } else { %>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/register" class="text-xl">Register</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/login" class="text-xl">Login</a>
          </li>
          <% } %>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a
              href="/cart"
              class="inline-block px-4 py-2 rounded-full flex items-center text-xl hover:text-cyan-500 duration-500"
            >
              <span id="cartCounter" class="text-white font-bold pr-2"
                ><%= session.cart ? session.cart.cartItems.totalQty :''%></span
              >
              <img src="/img/cart.png" alt=""
            /></a>
          </li>
        </ul>
      </div>
      <% } else { %>
      <div>
        <ul
          class="md:flex md:items-center z-[1] md:z-auto md:static absolute bg-white w-full left-0 md:w-auto md:py-0 py-4 md:pl-0 pl-7 md:opacity-100 opacity-0 top-[-400px] transition-all ease-in duration-500"
        >
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/menu" class="text-xl">Menu</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/customer/orders" class="text-xl">Orders</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/customer/profile" class="text-xl">Profile</a>
          </li>
          <% if(user) { %>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <form id="logout" action="/logout" method="POST">
              <a
                onclick="document.getElementById('logout').submit()"
                href="#"
                class="text-xl"
                >Logout</a
              >
            </form>
          </li>
          <% } else { %>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/register" class="text-xl">Register</a>
          </li>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a href="/login" class="text-xl">Login</a>
          </li>
          <% } %> <% if(user?.role === 'customer') { %>
          <li class="ml-6 mx-4 my-6 md:my-0">
            <a
              href="/cart"
              class="inline-block px-4 py-2 rounded-full flex items-center cartbutton text-xl"
            >
              <span id="cartCounter" class="text-white font-bold pr-2"
                ><%= session.cart ? session.cart.cartItems.totalQty :''%></span
              >
              <img src="/img/cart.png" alt=""
            /></a>
          </li>
          <% } %>
        </ul>
      </div>
      <% } %>
      <span class="text-3xl cursor-pointer mx-2 md:hidden block">
        <ion-icon name="menu" onclick="Hamburger(this)"></ion-icon>
      </span>
    </nav>

    <%- body %>

    <div class="footer-copyright inset-x-0 bottom-0">
      <p>&copy; Copyright 2022, Hungry Joe's Pizzeria</p>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/app.js"></script>
    <script>
      function Hamburger(e) {
        let list = document.querySelector("ul");
        e.name === "menu"
          ? ((e.name = "close"),
            list.classList.add("top-[80px]"),
            list.classList.add("opacity-100"))
          : ((e.name = "menu"),
            list.classList.remove("top-[80px]"),
            list.classList.remove("opacity-100"));
      }
    </script>
    <script>
      $(document).ready(function () {
        $("#myUserTable").DataTable();
        $("#myOfferTable").DataTable();
        $("#myOrderTable").DataTable({
          dom: "lfrtipB",
          buttons: ["copy", "csv", "excel", "pdf", "print"],
        });
      });
    </script>
  </body>
</html>
