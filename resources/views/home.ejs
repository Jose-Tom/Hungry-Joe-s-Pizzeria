<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg"><em><%= banner.description %></em></h6>
      <h1 class="text-3xl md:text-6xl font-bold"><%= banner.header %></h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
      >
        <a href="#OrderItems">Order Now</a>
      </button>
    </div>
    <div class="w-1/2">
      <img src="/img/<%= banner.image %>" alt="" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8 mt-20">Non-veg Pizzas</h1>
  <div
    id="OrderItems"
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-y-12 gap-x-16"
  >
    <% pizzas.forEach((pizza) => { %> <% if (pizza.category==="Non-Veg" &&
    !pizza.isDeleted ) { %>
    <div class="w-64">
      <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%=pizza.name%></h2>
        <span class="size py-1 px-4 rounded-full uppercase text-xs">
          <%=pizza.category%>
        </span>
        <div class="flex items-center justify-around mt-6">
          <% if (pizza.discount === 0) { %>
          <span class="font-bold text-lg"> ₹ <%= pizza.price %> </span>
          <% } else{ %>
          <s> <span class="font-bold text-lg"> ₹ <%= pizza.price %> </span> </s>
          <span class="font-bold text-lg">
            ₹ <%= (pizza.price - ((pizza.price*pizza.discount)/100)) %>
          </span>
          <% } %>
          <button
            data-pizza="<%= JSON.stringify(pizza) %>"
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% } %> <% }); %>
  </div>

