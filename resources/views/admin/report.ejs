<div class="background-secondary">
  <div class="container container-fluid userTable mx-auto">
    <table id="myOrderTable" class="display nowrap mb-10" style="width: 100%">
      <thead>
        <tr>
          <th>Id</th>
          <th>Phone Number</th>
          <th>Order Details</th>
          <th>Payment Type</th>
          <th>Total Amount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach((order) => { %>
        <tr>
          <td><%= order._id %></td>
          <td><%= order.phone %></td>
          <td>
            <% order.items.forEach((item)=> { %>
            <p><%= [item.name , item.qty ] %></p>
            <% }); %>
          </td>
          <td><%= order.paymentType %></td>
          <td><%= order.totalPrice %></td>
          <td><%= order.status %></td>
        </tr>
        <% }); %>
      </tbody>
      <tfoot class="mb-5 pb-5">
        <tr class="mb-5 pb-5">
          <th>Id</th>
          <th>Phone Number</th>
          <th>Order Details</th>
          <th>Payment Type</th>
          <th>Total Amount</th>
          <th>Status</th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
