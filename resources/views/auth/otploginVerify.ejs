<section class="login flex flex-col justify-center pt-24">
    <div class="w-full max-w-xs ">
      <form
        action="/otploginverify"
        method="POST"
        class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col justify-center  "
      >
        <% if(messages.error) { %>
        <span class="text-red-500 text-sm"><%= messages.error %></span>
        <% } %>
        <div class="mb-4">
          <div class="flex items-center justify-between"></div>
          <label class="block text-gray-700 text-sm font-bold mb-2" for="otp">
            Enter the OTP received on your number.
          </label>
          <input
            name="otp"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            id="otp"
            type="number"
          />
         
          </div>
          <div class="flex items-center justify-center  ">
            <button
              class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Submit
            </button>
          </div>
        </div>
      </form>
    </div>
  </section>
  